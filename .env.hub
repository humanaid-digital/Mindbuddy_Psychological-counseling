# Docker Hub 테스트용 환경 변수

# Docker Hub 설정
DOCKER_HUB_USERNAME=mindbuddy
TAG=latest

# PostgreSQL 데이터베이스 설정
DATABASE_URL=postgresql://postgres:password@postgres:5432/mindbuddy
DB_HOST=postgres
DB_PORT=5432
DB_NAME=mindbuddy
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# JWT 설정
JWT_SECRET=mindBuddySecretKey2025SecureApplicationForCounseling

# 서버 설정
PORT=5000
NODE_ENV=production

# 프론트엔드 URL
FRONTEND_URL=http://localhost:3000

# Redis 설정
REDIS_URL=redis://redis:6379

# 이메일 설정 (테스트용 - 실제 값으로 변경 필요)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=test@example.com
EMAIL_PASS=test-password
CONTACT_EMAIL=contact@mindbuddy.com

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# 세션 설정
SESSION_DURATION=50

# 모니터링 설정
ENABLE_MONITORING=true
LOG_LEVEL=info

# 보안 설정
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
REGISTER_RATE_LIMIT_MAX=3