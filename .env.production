# 프로덕션 환경 설정
NODE_ENV=production
PORT=5000

# 데이터베이스 (프로덕션 MongoDB URI로 변경 필요)
MONGODB_URI=mongodb://mongodb:27017/mindbuddy

# JWT (강력한 시크릿으로 변경 필요)
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-SECRET-IN-PRODUCTION

# 프론트엔드 URL (실제 도메인으로 변경)
FRONTEND_URL=https://your-domain.com

# 로그 레벨
LOG_LEVEL=warn

# 보안 설정 (더 엄격하게)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
LOGIN_RATE_LIMIT_MAX=3
REGISTER_RATE_LIMIT_MAX=2

# 모니터링
ENABLE_MONITORING=true